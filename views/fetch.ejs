<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DROP-SERVER</title>
    <link rel='stylesheet' href='./../css/main.css'>
</head>
<body>
    <div class="cont">
        <div id="nav" class="nav">
            <a href="/">DROP</a>
            <a href="#" class="active">FETCH</a>
        </div>
        <header>
            <div class="box">
                <h1>DROP SERVER</h1>
            </div>
        </header>
        <% if (contents) { %>
            <div class="main">
                <% contents.forEach(element=> { %>
                    <a class="card" href="./../uploads/<%= element %>" download="<%= element %>">
                        <% if (element.split('.')[1] == 'png' || element.split('.')[1] == 'jpg' || element.split('.')[1] == 'jpeg' || element.split('.')[1] == 'gif') { %> 
                            <img src="./../uploads/<%= element %>" alt="<%= element %>">
                        <% } else { %> 
                            <p><%= element %> </p>
                        <% } %> 
                    </a>
                <% }) %>
            </div>
        <% } %>
    </div>
</body>
</html>